<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rating</th>
      <th>Release Date</th>
      <th>View Details</th>
    </tr>
  </thead>
  
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td>
          <%= link_to "Show", movie %> 
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
  </tfoot>
</table>
</div>

<%= link_to "New movie", new_movie_path %>
